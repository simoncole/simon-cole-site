---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const notes = await getCollection("research");

  return notes.map((note) => ({
    params: { slug: note.slug },
    props: { note },
  }));
}

const { note } = Astro.props;
const { Content } = await note.render();
---

<BaseLayout title={note.data.title} description={note.data.summary} currentPath="/research/">
  <article class="prose stack">
    <header class="stack">
      <p class="kicker">Research</p>
      <h1>{note.data.title}</h1>
      <p>{note.data.summary}</p>
      <div class="tag-row">
        <span class="tag">{note.data.status}</span>
        {note.data.tags.map((tag) => <span class="tag">{tag}</span>)}
      </div>
    </header>

    <Content />
  </article>
</BaseLayout>
