---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  currentPath?: string;
}

const {
  title,
  description = "",
  currentPath = "/",
} = Astro.props;

const hasDescription = description.trim().length > 0;

const nav = [
  { href: "/", label: "Home" },
  { href: "/research/", label: "Research" },
  { href: "/bookshelf/", label: "Bookshelf" },
];

const pageTitle = title.includes("Simon") ? title : `${title} | Simon Cole`;
const toBase = (path: string) => `${import.meta.env.BASE_URL}${path.replace(/^\//, "")}`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {hasDescription && <meta name="description" content={description} />}
    <title>{pageTitle}</title>
    <link rel="icon" type="image/svg+xml" href={toBase("/favicon.svg")} />
  </head>
  <body>
    <div class="shell">
      <header class="site-header">
        <a class="site-mark" href={toBase("/")}>Simon Cole</a>
        <nav class="site-nav" aria-label="Primary navigation">
          {
            nav.map((item) => (
              <a href={toBase(item.href)} aria-current={currentPath === item.href ? "page" : undefined}>
                {item.label}
              </a>
            ))
          }
        </nav>
      </header>

      <main>
        <slot />
      </main>
    </div>
  </body>
</html>
